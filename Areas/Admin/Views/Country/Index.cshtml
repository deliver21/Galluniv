@model List<Country>

<div class="card shadow border-0 mb-5 mt-5">
    <div class="card-header bg-primary bg-gradient mt-4 ml-0">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-lg-4 col-sm-6 text-center pt-2">
                <h3 class="text-white">Country List</h3>
            </div>

            <div class="col-lg-4 col-sm-6 text-end pt-2">
                <a asp-controller="Country" asp-action="Upsert" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i>  Add Country
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <table id="tblData" class="table table-bordered table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th><i class="flag flag-belarus"></i> Country</th>
                    <th><i class="flag flag-belarus"></i> Code</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>      
        </table>
    </div>
</div>
@section Scripts{
        <script src="~/js/country.js"></script>
}