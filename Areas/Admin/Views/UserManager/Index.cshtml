<div class="card shadow border-0 mb-5 mt-5">
    <div class="card-header bg-primary bg-gradient mt-4 ml-0">
        <div class="row">
            <div class="col-4"></div>
            <div class="col-lg-4 col-sm-6 text-center pt-2">
                <h3 class="text-white">Student List</h3>
            </div>

            <div class="col-lg-4 col-sm-6 text-end pt-2">
                <a id="register" asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark">
                    <i class="bi bi-plus-circle"></i>  Add Student
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="tblData" class="table table-bordered table-hover" style="width:100%">
            <thead @*class="table-borderless"*@>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Country</th>
                    <th>Speciality</th>
                    <th>Faculty</th>
                    <th></th>
                </tr>
            </thead>
        </table> 
    </div>
</div>
@section Scripts{
            <script src="~/js/usermanager.js"></script>
}