<!DOCTYPE html>
<html lang="en" style=" height: 100%;
            margin: 0;">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - GallUni</title>
    <link rel="icon" type="image/svg" href="~images/brilliance.svg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GallUni.styles.css" asp-append-version="true" />
    @*Javascript link to toast dynamic effect used in the app*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @*Css link to toast dynamic effect used in the app*@
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link href="toastr.css" rel="stylesheet" />

    @*Css link to datatable automatically created effect used in the app*@
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.1/css/dataTables.dataTables.css" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
    @*Rendering gallery*@
    <link href="@Url.Content("~/css/gallery.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>

<body style=" height: 100%;
            margin: 0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-body-tertiary border-bottom-0 box-shadow mb-5 fixed-top" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index"> 
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brilliance" viewBox="0 0 16 16">
                       <path d="M8 16A8 8 0 1 1 8 0a8 8 0 0 1 0 16M1 8a7 7 0 0 0 7 7 3.5 3.5 0 1 0 0-7 3.5 3.5 0 1 1 0-7 7 7 0 0 0-7 7"/>
                    </svg> 
                <strong>GallUni</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav nav-pills flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="@Url.Action("Index", "Home",new { area = "Customer" })#News&Events">News & Events</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Customer" asp-controller="Gallery" asp-action="Index">My gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="UserManager" asp-action="Index">User Manager</a>
                        </li>
                        <li class="nav-item dropdown">
                          <a class="nav-link dropdown-toggle text-dark " data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Content Management</a>
                           <div class="dropdown-menu bg-white border-black">
                             <a class="dropdown-item text-dark" href="#">Events</a>
                             <a class="dropdown-item text-dark" href="#">Tags</a>
                             <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Country" asp-action="Index">Countries</a>
                             <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Faculty" asp-action="Index">Faculties</a>
                             <a class="dropdown-item text-dark" asp-area="Admin" asp-controller="Speciality" asp-action="Index">Specialities</a>
                             <p class="divider-text d-flex "></p>
                             <a class="dropdown-item" href="#">Create User</a>
                           </div>
                        </li>
                    </ul>
                    <partial name="_loginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="min-height:90vh;">
        <main role="main" class="pb-3 my-3">
            <div class="mt-2 mb-5"></div>
            <partial name="_Notification"/>            
            @RenderBody()
        </main>
    </div>
    @*position:relative; z-index:10; width:100%*@
    <footer class="footer bg-light text-center text-dark-subtle" style="margin-top:auto;position:relative;/*bottom:0; left:0;*/ z-index:10; width:100%">
       <div class="container">             
            <div class="row pt-4">
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto my-0" style="line-height: 25px">
                    <h6 class="fw-bold">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brilliance" viewBox="0 0 16 16">
                       <path d="M8 16A8 8 0 1 1 8 0a8 8 0 0 1 0 16M1 8a7 7 0 0 0 7 7 3.5 3.5 0 1 0 0-7 3.5 3.5 0 1 1 0-7 7 7 0 0 0-7 7"/>
                    </svg>  Galluni
                    </h6>
                    <p style="font-size:15px">Your one-stop destination<br /> for university news & events.</p>
                    <p style="font-size:12px">Connect with us on social media:</p>
                    <div class="row">
                        <div class="col-md-2 col-xl-1 mx-auto">
                            <a href="#" class="text-primary">
                                <i class="bi bi-whatsapp"></i>
                            </a>                            
                        </div>
                        <div class="col-md-2 col-xl-1 mx-auto">
                            <a href="#" class="text-primary">
                                <i class="bi bi-twitter-x"></i>
                            </a>                           
                        </div>
                         <div class="col-md-2 col-xl-1 mx-auto">
                            <a href="#" class="text-primary">
                                <i class="bi bi-telegram"></i>
                            </a>

                        </div>
                        <div class="col-md-2 col-xl-1 mx-auto">
                            <a href="#" class="text-primary">
                                <i class="bi bi-google"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-9 col-lg-8 col-xl-9 mx-auto my-0" style="line-height:35px">
                    <h6 class="fw-bold">Quick Links</h6>
                    <ul class="list-unstyled " style="font-size:13px" >
                        <li><a class="text-primary" style="text-decoration:none;" asp-area="customer" asp-controller="home" asp-action="Privacy">Privacy</a></li>
                        <li><a class="text-primary" style="text-decoration:none;" href="#">Terms of Service</a></li>
                        <li><a class="text-primary" style="text-decoration:none;" href="#">Contact Us</a></li>
                    </ul>
                </div>
            </div>
            <div class="row mb-0 p-0 text-center fst-italic">
                <div class="col-md-6 col-lg-8 col-xl-9 mx-auto my-0">
                    <p>&copy; @DateTime.Now.Year GallUni. All rights reserved.</p>
                </div>
            </div>
       </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @*Sweet Alert*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
